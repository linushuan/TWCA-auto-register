{
    "manifest_version": 3,
    "name": "TWCA報名幫手",
    "version": "1.1.0",
    "description": "半自動報名TWCA比賽 簡化版 自己用",
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
